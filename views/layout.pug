doctype html
html
  head
    title= title
    link(rel="stylesheet" href="/stylesheets/bootstrap.min.css")
    link(rel="stylesheet" href="/stylesheets/datatables.css")
    script(src="/javascripts/popper.js" type="text/javascript")
    script(src="/javascripts/jquery.min.js" type="text/javascript")
    script(src="/javascripts/datatables.js" type="text/javascript")
    script(src="/javascripts/bootstrap.min.js" type="text/javascript")
  body
    div(id='navbar')
    div(class='col-md-12')
      block content
script(type='text/javascript').
  var xhttp = new XMLHttpRequest();
  xhttp.onreadystatechange = function() {
    if (this.readyState == 4 && this.status == 200) {
      document.getElementById("navbar").innerHTML = this.responseText;
    }else{
      document.getElementById("navbar").innerHTML = this.responseText;
    }
  };
  xhttp.open("GET", "#{base_url}/navbar", true);
  xhttp.send();